@model Diary.Models.Homework
@{
    ViewData["Title"] = "AddHomework";
    Layout = "_LayoutTeacher";
}

<h1>AddHomework</h1>

<h4>Homework</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddHomework">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Lesson" class="control-label"></label>
                <input asp-for="Lesson" class="form-control" />
                <span asp-validation-for="Lesson" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImagePath" class="control-label"></label>
                <input asp-for="ImagePath" class="form-control" />
                <span asp-validation-for="ImagePath" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-area="Teacher" asp-controller="ProfileTeacher" asp-action="Teacher">Back to List</a>
</div>

