@model Diary.Models.Homework
@{
    ViewData["Title"] = "HomeworkDetails";
    Layout = "_LayoutStudent";
}

<h1>HomeworkDetails</h1>

<form action="HomeworkDetails" method="post" enctype="multipart/form-data">
<div>
    <h4>Homework</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ShortDescription)
        </dt>
        <dd class="col-sm-10">
            <input asp-for="ShortDescription" name="ShortDescription" />
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LongDescription)
        </dt>
        <dd class="col-sm-10">
            <input asp-for="LongDescription" name="LongDescription" />
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.StartDateTime)
        </dt>
        <dd class="col-sm-10">
            <input asp-for="StartDateTime" name="StartDateTime" />
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.StopDateTime)
        </dt>
        <dd class="col-sm-10">
            <input asp-for="StopDateTime" name="StopDateTime" />
        </dd>
    </dl>
</div>
    <div class="form-group">
        <textarea name="TextToHomework"></textarea>
    </div>
    <div class="form-group">
        <input type="file" name="PathHomework"/>
        <p>@Url.Content(Model.PathHomework)</p>
    </div>
    <div class="form-group">
        <input type="submit" value="Send"/>
    </div>
</form>
