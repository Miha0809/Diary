@model Diary.Models.Homework
@{
    ViewData["Title"] = "HomeworkDetails";
    Layout = "_LayoutStudent";
}

<h1>HomeworkDetails</h1>

<div>
    <h4>Homework</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ShortDescription)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ShortDescription)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.LongDescription)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LongDescription)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.StartDateTime)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StartDateTime)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.StopDateTime)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StopDateTime)
        </dd>
    </dl>
</div>

<hr />

<form action="HomeworkDetails" method="post">
    <div class="form-group">
        <textarea name="text" style="width: 70%;"></textarea>
    </div>
    <hr />
    <div class="form-group">
        <input type="file" name="fileHomework" />
    </div>
    <div class="form-group">
        <input type="submit" value="Send" />
    </div>
</form>

<div>
    <a asp-area="Student" asp-controller="Homework" asp-action="Homeworks">Back to List</a>
</div>
