@model IEnumerable<Diary.Models.ReadyHomework>
@{
    ViewData["Title"] = "ReadyHomeworks";
    Layout = "_LayoutStudent";
}

<h1>ReadyHomeworks</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ShortDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LongDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TextToHomework)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PathHomework)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartDateTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StopDateTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Group)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Lesson)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Homework)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Student)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ShortDescription)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LongDescription)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TextToHomework)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PathHomework)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StartDateTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StopDateTime)
                </td>
                <td>
                    @Html.DisplayFor(model => item.Group.Name)
                </td>
                <td>
                    @Html.DisplayFor(model => item.Lesson.Name)
                </td>
                <td>
                    @Html.DisplayFor(model => item.Homework.ShortDescription)
                </td>
                <td>
                    @Html.DisplayFor(model => item.Student.Email)
                </td>
            </tr>
        }
    </tbody>
</table>
